  "type": "commonjs",
  "scripts": {
    "build": "npm run build -ws",
    "dev": "pm2-dev --raw ./dev.json",
    "clean": "rm -rf ./server/dist; rm -rf ./demo-server/dist; rm -rf ./shared/dist; rm -rf ./client/dist;"
  },
  "workspaces": [
    "shared",
    "server",
    "demo-server",
    "client"
  ],
  "exports": {
    "./shared": {
      "types": "./shared/dist/lib/index.d.ts",
      "default": "./shared/dist/lib/index.js",
      "main": "./shared/dist/lib/index.js"
    },
    "./server": {
      "types": "./server/dist/lib/index.d.ts",
      "default": "./server/dist/lib/index.js",
      "main": "./shared/dist/lib/index.js"
    },
    "./client": {
      "types": "./client/dist/lib/index.d.ts",
      "default": "./client/dist/lib/index.js",
      "main": "./shared/dist/lib/index.js"
    }
  },
  "devDependencies": {
    "pm2": "^6.0.8",
    "tsx": "^4.20.2"
  }
